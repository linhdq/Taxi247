<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:src="@drawable/child_help_cancel_booking_pic1"
            android:id="@+id/imv_image"
            />
        <TextView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:text="1"
            android:gravity="center"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:background="@drawable/circle_text_view"
            android:layout_below="@id/imv_image"
            android:layout_marginTop="@dimen/_15sdp"
            android:id="@+id/txt_index"
            android:textColor="@color/grey_900"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/txt_index"
            android:layout_toRightOf="@id/txt_index"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/reminder"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:textColor="@color/grey_900"
            android:id="@+id/txt_title"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_index"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/help_reminder"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/grey_900"
            android:id="@+id/txt_content"
            />
    </RelativeLayout>
</ScrollView>
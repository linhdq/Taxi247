<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_100sdp"
        >
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/google_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:id="@+id/center_map"
            />

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_33sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_marker_pin_google"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/center_map"
            android:id="@+id/imv_marker"/>

        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_above="@id/imv_marker"
            android:src="@drawable/ic_arrow_drop_down_white_48px"
            android:scaleType="center"
            android:layout_centerHorizontal="true"
            android:id="@+id/imv_arrow_down"/>

        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_25sdp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_above="@id/imv_arrow_down"
            android:layout_centerHorizontal="true"
            android:id="@+id/view_window_info">

            <RelativeLayout
                android:layout_width="@dimen/_25sdp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imv_window_info"
                    android:src="@drawable/ic_warning_white_48px"
                    android:background="@color/colorPrimary"
                    android:padding="@dimen/_2sdp"
                    android:visibility="invisible"/>

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/progress_bar_window_info"
                    android:padding="@dimen/_2sdp"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_window_info"
                    android:text="2\nphút"
                    android:gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimary"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="@dimen/_75sdp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Không có xe"
                android:textColor="@color/grey_900"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/layout_car_type"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@color/orange_800"
            android:padding="@dimen/_1sdp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/city"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:id="@+id/tab_city"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/airport"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:textColor="@color/teal_600"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_1sdp"
                android:background="@color/white"
                android:textAllCaps="true"
                android:id="@+id/tab_airport"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/tccar"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:textColor="@color/teal_600"
                android:background="@color/white"
                android:textAllCaps="true"
                android:id="@+id/tab_tccar"
                />
        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:id="@+id/car_type_viewpager"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_500"
                android:id="@+id/view_01"
                />
            <View
                android:layout_width="0.5dp"
                android:layout_height="@dimen/_100sdp"
                android:background="@color/grey_500"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_100sdp"
                android:id="@+id/view_02"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_toLeftOf="@id/view_02"
                android:layout_below="@id/view_01"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:id="@+id/layout_commencement_rate"
                android:padding="@dimen/_2sdp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Commencement rate up to 0.5km"
                    android:gravity="center"
                    android:textColor="@color/grey_700"
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/txt_commencement_rate"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6000 VND/km"
                    android:gravity="center"
                    android:textColor="@color/teal_600"
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/txt_commencement_rate_price"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_2sdp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_500"
                android:layout_below="@id/layout_commencement_rate"
                android:layout_toLeftOf="@id/view_02"
                android:id="@+id/view_03"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/view_03"
                android:layout_toLeftOf="@id/view_02"
                >
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey_500"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/view_04"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_toLeftOf="@id/view_04"
                    android:id="@+id/layout_price_01"
                    android:padding="@dimen/_2sdp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="From 0.5 to 20km"
                        android:gravity="center"
                        android:textColor="@color/grey_700"
                        android:textSize="@dimen/_10sdp"
                        android:id="@+id/txt_descrip_price_01"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="11000 VND/km"
                        android:gravity="center"
                        android:textColor="@color/teal_600"
                        android:textSize="@dimen/_10sdp"
                        android:id="@+id/txt_price_01"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_2sdp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/view_04"
                    android:id="@+id/layout_price_02"
                    android:padding="@dimen/_2sdp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="From 20km upwards"
                        android:gravity="center"
                        android:textColor="@color/grey_700"
                        android:textSize="@dimen/_10sdp"
                        android:id="@+id/txt_descrip_price_02"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9000 VND/km"
                        android:gravity="center"
                        android:textColor="@color/teal_600"
                        android:textSize="@dimen/_10sdp"
                        android:id="@+id/txt_price_02"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_2sdp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_below="@id/view_01"
                android:id="@+id/layout_discount"
                android:layout_alignParentRight="true"
                android:padding="@dimen/_4sdp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-80%"
                    android:gravity="center"
                    android:textColor="@color/red_600"
                    android:textSize="@dimen/_18sdp"
                    android:id="@+id/txt_discount_percent"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fare_of_return_trip_with_distance"
                    android:gravity="center"
                    android:textColor="@color/grey_700"
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/txt_discount_descrip"
                    android:layout_marginTop="@dimen/_2sdp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>